FALSE = 0
TRUE = 1 

  while [$TRUE]; do

    cat /etc/mtab | grep media >> /dev/null
    
      USBDEV=$(dmesg | tail -n30 | grep ": Serial"| awk'{print $6}')
  
  MOUNTED=$(lsblk | grep-c "sd*[b-z]1")
  
      if[$MOUNTED==1];then
          if[$(grep -c $USBDEV bloqueados.txt)==$FALSE];then
              if[$(grep -c $USBDEV libres.txt)==$FALSE];then
                  echo "Se a detectado un nuevo dispositivo: $USBDEV ¿Que desea hacer?"
                  echo "1)bloquear para siempre  2)Montar dispositivo  3)añadir a libres"
                  
          read
      seleccion
      
      case $seleccion in
            1) echo $USBDEV>>
              bloqueados
              eject
              /dev/sdb1;;
            
            2) mount
              /dev/sdb1/media;;
              
            3) echo
              $USBDEV>>libres;;
            
            *) echo
              "opcion invalidad";;
              
            esac1
            
            else
                mount/dev/sbd1
               /media/
            
            fi
            
            else
            
            eject sdb
            
            
            fi
            
            
            fi
            
            
            dmesg --clear
            
            
            mount -a
            
            
            sleep 5
            
            
            done
